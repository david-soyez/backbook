doctype html
html
    head
        title Livres en anglais
        link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    body
        div(class='container')
            div(class='navbar')
                div(class='navbar-header')
                    a(href='/',class='navbar-brand') backbook
                div(class='navbar-collapse collapse',id='navbar-main')
                    ul(class='navbar-nav nav')
                        li(class='dropdown')
                            a(href='/') Accueil
                        li(class='dropdown')
                            a(href='/books') Tous les livres
                        li(class='dropdown')
                            a(href='#',class='dropdown-toggle',data-toggle='dropdown')
                                | Par genres
                                span(class='caret')
                            ul(class='dropdown-menu')
                                for categorie in categories
                                    li
                                        a(href='/#{categorie.slug_fr}') #{categorie.name_fr}
                        li(class='dropdown')
                            a(href='/about') A propos
                    ul(class='navbar-nav nav navbar-right')
                        li
                            a(href='/connexion') Connexion
                        li
                            a(href='/inscription') S'inscrire



            div(class='row-fluid')
                block content



            footer
                div(class='row-fluid')
                    div(class='col-lg-12')
                        ul(class='list-unstyled')
                            li
                                a(href='https://github.com/david-soyez/backbook') Github
                            li
                                a(href='/rss') RSS
                            li
                                a(href='#') Faire un don

        script(src='/javascripts/lib/require/require.js', data-main='/javascripts/main.js', type='text/javascript')
        script(type='text/javascript') window.categories = !{JSON.stringify(categories)}
